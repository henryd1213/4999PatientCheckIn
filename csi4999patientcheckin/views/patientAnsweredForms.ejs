             <!DOCTYPE html>
             <html>
             <meta name="viewport" content="width=device-width, initial-scale=1.0">
             
             <head>
                 <title>Form Information</title>
                 <link href="public/css/List.css" rel="stylesheet">
             </head>
             <style>
                 .btone {
                     position: relative;
                     top: 50px;
                     display: block;
                     padding: 11px 13px;
                     text-align: center;
                     text-decoration: none;
                     color: cadetblue;
                     background-color: lightblue;
                     margin: auto;
                     outline: none;
                     cursor: pointer;
                     border: none;
                     font-size: 15px;
                 }
             
                 .btone {
                     width: 46%;
                     line-height: 2em;
                     margin: auto;
                     text-align: center;
                     text-decoration: none;
                     border-radius: 8px;
             
                 }
             
                 .btone:hover {
                     color: steelblue;
                     background: powderblue;
                 }
             </style>
             
             <body>
             
                 <center>
                     <form action="patientAnswers" method="post">
                         <%user.forEach((item)=>{%>
                             <h1>
                                 <%=item.Fname%>
                                     <%=item.Lname%>'s Answered Forms
                             </h1>
                             <input type="text" name="name" value="<%=item.ID%>"
                                 style="color: seashell; background: none; border: none; position: absolute; z-index: -1000;">
                             <%});%>
             
                                 <!-- Output table-->
             
                                 <table id='fullTable'>
                                     <tr>
                                         <th>Form Name</th>
                                         <th>View Responses</th>
                                     </tr>
                                  
                                    
                                     <%form.forEach((item)=>{%>
                                        <tr>
                                            <td>
                                                <%=item.Name%>
                                            </td>
                                            <td>
                                                <button type="submit" name="Form<%=item.ID%>" value="<%=item.ID%>"
                                    
                                                    style="border: none; background: none;">
                                                    <input name="Form<%=item.ID%>"
                                                        type="text" value="View <%=item.Name%> Responses" 
                                                    style="color: black; margin: 0%;"class="btn btn-lg btn-secondary fw-bold border-white bg-white" readonly>
                                                   
                                                </button>
                                            </td>
                                        </tr>
                                         <script>
                                             apperance4.push('<%=item.Name%>')
                                             apperance5.push('<%=item.Name%>')
                                             apperance6.push('<%=item.Name%>')
                                         </script>
                                         <%});%>
                                 
                                        
             
                                 </table>
             
             
                     </form>
                 </center>
             
                 <!--Exit button-->
                 <div class="close">
                     <a href="home_return" class="closebutton" style="margin-top: 9.6em;">Back</a>
                 </div>
             </body>
             
             </html>