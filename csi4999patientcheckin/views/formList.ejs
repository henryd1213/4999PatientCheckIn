<!DOCTYPE html>
<html>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<head>
    <title>Form List </title>
    <link href="public/css/List.css" rel="stylesheet">
</head>
<style>
    .btone {
        position: relative;
        top: 50px;
        display: block;
        padding: 11px 13px;
        text-align: center;
        text-decoration: none;
        color: cadetblue;
        background-color: lightblue;
        margin: auto;
        outline: none;
        cursor: pointer;
        border: none;
        font-size: 15px;
    }

    .btone {
        width: 46%;
        line-height: 2em;
        margin: auto;
        text-align: center;
        text-decoration: none;
        border-radius: 8px;

    }

    .btone:hover {
        color: steelblue;
        background: powderblue;
    }
</style>

<body>

    <center>
        <h1>Available Patient Forms</h1>

        <!-- Output table-->
        <form action="formChanges" method="post">
            <table>
                <tr>
                    <th>Form Name</th>
                    <th>Load Position</th>
                </tr>
                <script>count = 0;</script>

                <%data.forEach((item)=>{%>
                    <script>for (var x of '<%=item.ID%>') {
                            if (x.ID != '') {
                                count++;
                            }
                        }
                    </script>
                    <%});%>

                        <%data.forEach((item)=>{%>
                            <tr>
                                <td>
                                    <button type="submit" name="form<%=item.ID%>" value="form<%=item.ID%>"
                                        style="border: none; background: none;"><input name="form<%=item.ID%>"
                                            type="text" value="<%=item.Name%>"
                                            style="background: none; border: none; margin: 0%; text-align: center;"></button>
                                </td>
                                <td>
                                    <select name="Position<%=item.ID%>" id="position" value="0"
                                        default="<%= item.Name%>" onchange="posSelection()"
                                        style="background: none; border: none;">
                                        <option name="current" value="<%=item.Apperance%>">Current (<%=item.Apperance%>)
                                        </option>
                                        <option name="none" value="0">None</option>
                                        <script>
                                            for (var d = 1; d <= count; d++) {
                                                document.write("<option>" + d + "</option>");
                                            }
                                        </script>

                                    </select>
                                </td>
                            </tr>



                            <%});%>
            </table>
            <input name="submit" type="submit" value="Submit" style="margin: 5px;" class="btone">
        </form>
    </center>

    <!--Exit button-->
    <div class="close">
        <a href="admin_list_return" class="closebutton" style="margin-top: 9.6em;">Back</a>
    </div>
</body>

</html>