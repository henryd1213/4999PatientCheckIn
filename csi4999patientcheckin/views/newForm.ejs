            </table>
            <script>
                 document.write('<input name="date" type="text" value="'+ date+'" style="color: seashell; background: none; border: none; position: absolute; z-index: -1000;">');
            </script>
            <table name="fullTable" id="fullTable">
                <tr>
                    <th>Question Number</th>
                    <th>Question Type</th>
                    <th>Question</th>
                    <th>Number of Radio/Image Options</th>
                    <th>Image/Radio Option One</th>
                    <th>Image/Radio Option Two</th>
